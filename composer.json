  "autoload-dev": {
    "psr-4": {
      "App\\Tests\\": "tests"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^11.4.3",
    "phpstan/phpstan": "^2.0"
  },
  "require": {
    "firebase/php-jwt": "^6.10"
  }
}
