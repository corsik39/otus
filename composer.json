{
  "name": "igor/otus",
  "type": "library",
  "scripts": {
    "test": "phpunit tests",
    "test-report": "phpunit --coverage-html coverage-report tests"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src"
    }
